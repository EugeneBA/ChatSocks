<UserControl x:Class="ChatSocks.customs.composeBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatSocks.customs"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="350" HorizontalAlignment="Center" VerticalAlignment="Bottom" KeyDown="UserControl_KeyDown">
    <Border CornerRadius="5" Background="#FF571B65">
        <Grid>
            <Border Name="messageText" Height="30" Width="345" HorizontalAlignment="Center" Background="#FFCBCBCB" CornerRadius="5" VerticalAlignment="Top" Margin="0,3,0,0" >
                <Grid>
                    <Image Source="/ChatSocks;component/art/face-id-5.png" Width="25" HorizontalAlignment="Left" Margin="5,0,0,0" Opacity="0.8"  />
                    <TextBox Name="message" Text="Hie there.." Margin="35,0,0,0" MouseDown="message_MouseDown" Background="Transparent" FontSize="16" BorderThickness="0,0,0,0" Foreground="Gray" VerticalContentAlignment="Center" FontFamily="Roboto" Padding="5,0,0,0" GotFocus="message_GotFocus"  />
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
