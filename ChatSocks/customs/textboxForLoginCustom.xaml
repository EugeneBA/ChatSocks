<UserControl x:Class="ChatSocks.customs.textboxForLoginCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatSocks.customs"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="300">
    <Grid>
        <TextBox Name="textLabel" Foreground="Black"  Background="Transparent" BorderThickness="0,0,0,0" Height="30" VerticalAlignment="Top" Text="username" HorizontalContentAlignment="center" VerticalContentAlignment="Center" FontFamily="Roboto"  GotFocus="textLabel_GotFocus"/>
        <Rectangle Name="itemLine" Width="300" Height="1" Fill="Black" VerticalAlignment="Bottom" Opacity="0.7" />
        <Image Name="textIcon" HorizontalAlignment="Left" Margin="5,0,0,0" Width="20" Source="/ChatSocks;component/art/face-id-5.png" />
    </Grid>
</UserControl>
