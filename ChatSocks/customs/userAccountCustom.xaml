<UserControl x:Class="ChatSocks.customs.userAccountCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatSocks.customs"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="290">
    <Border CornerRadius="8" Background="#FF5F2873">
        <Grid>
            <Grid HorizontalAlignment="Left" Width="50">
            <Ellipse Width="30" Height="30" Fill="#FF590A59"/>
            <Label Name="labelIcon" FontFamily="Roboto" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"  Content="R" Foreground="White" />
           </Grid>
            <Label Name="AccountName" Content="Ryan Ben" FontSize="15" Foreground="Gray" FontWeight="Bold" Height="30" Width="200" Margin="55,0,45,19.6"/>
            <Label Name="lastMessage" Content="Hey wassup.." FontSize="15" Foreground="Gray" Height="30" Width="200" Margin="55,20,45,-0.4"/>
        </Grid>
    </Border>
</UserControl>
